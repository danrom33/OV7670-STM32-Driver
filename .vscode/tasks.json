  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate build system",
      "type": "shell",
      "command": "cmake -G 'MinGW Makefiles' -B 'build' ./ -DCMAKE_TOOLCHAIN_FILE='CMake/arm-none-eabi.cmake' -DCMAKE_BUILD_TYPE=debug",
    },
    {
      "label": "Build Project",
      "type": "shell",
      "command": "cmake --build ./build",
    }
  ]
}